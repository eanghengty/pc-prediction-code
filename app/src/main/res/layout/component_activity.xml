<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_1">
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/custom_pink">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/thunder"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="COMPONENTS"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:layout_centerInParent="true"
            >

        </TextView>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/plus"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp">

        </ImageView>



    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_bar">
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/top_bar"
            android:gravity="center"
            >
            <LinearLayout
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="#80ffffff">
                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:rowCount="5"
                    android:columnCount="2">

                    <LinearLayout
                        android:layout_margin="10dp"
                        android:layout_height="130dp"
                        android:layout_width="150dp"
                        android:background="@color/custom_yellow"
                        android:orientation="vertical"
                        ></LinearLayout>
                    <LinearLayout
                        android:layout_margin="10dp"
                        android:layout_height="130dp"
                        android:layout_width="150dp"
                        android:background="@color/custom_yellow"
                        android:orientation="vertical"
                        ></LinearLayout>
                    <LinearLayout
                        android:layout_margin="10dp"
                        android:layout_height="130dp"
                        android:layout_width="150dp"
                        android:background="@color/custom_yellow"
                        android:orientation="vertical"
                        ></LinearLayout>
                    <LinearLayout
                        android:layout_margin="10dp"
                        android:layout_height="130dp"
                        android:layout_width="150dp"
                        android:background="@color/custom_yellow"
                        android:orientation="vertical"
                        ></LinearLayout>
                    <LinearLayout
                        android:layout_margin="10dp"
                        android:layout_height="130dp"
                        android:layout_width="150dp"
                        android:background="@color/custom_yellow"
                        android:orientation="vertical"
                        ></LinearLayout>
                    <LinearLayout
                        android:layout_margin="10dp"
                        android:layout_height="130dp"
                        android:layout_width="150dp"
                        android:background="@color/custom_yellow"
                        android:orientation="vertical"
                        ></LinearLayout>
                    <LinearLayout
                        android:layout_margin="10dp"
                        android:layout_height="130dp"
                        android:layout_width="150dp"
                        android:background="@color/custom_yellow"
                        android:orientation="vertical"
                        ></LinearLayout>
                    <LinearLayout
                        android:layout_margin="10dp"
                        android:layout_height="130dp"
                        android:layout_width="150dp"
                        android:background="@color/custom_yellow"
                        android:orientation="vertical"
                        ></LinearLayout>
                    <LinearLayout
                        android:layout_margin="10dp"
                        android:layout_height="130dp"
                        android:layout_width="150dp"
                        android:background="@color/custom_yellow"
                        android:orientation="vertical"
                        ></LinearLayout>
                    <LinearLayout
                        android:layout_margin="10dp"
                        android:layout_height="130dp"
                        android:layout_width="150dp"
                        android:background="@color/custom_yellow"
                        android:orientation="vertical"
                        ></LinearLayout>
                </GridLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#33ffffff">

        <ImageView
            android:id="@+id/home_tab"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="50dp"
            android:layout_toStartOf="@+id/component_tab"
            android:src="@drawable/home">

        </ImageView>

        <TextView
            android:id="@+id/component_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="Components"
            android:textColor="@color/white"
            android:textSize="10sp">

        </TextView>

        <TextView

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_below="@+id/home_tab"


            android:layout_marginTop="2dp"
            android:layout_marginEnd="26dp"
            android:layout_toStartOf="@id/component_title"

            android:text="Home"
            android:textColor="@color/white"
            android:textSize="10sp">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="26dp"
            android:layout_toEndOf="@id/component_title"
            android:text="Setting"
            android:textColor="@color/white"
            android:textSize="10sp">

        </TextView>

        <ImageView
            android:id="@+id/component_tab"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:src="@drawable/component">

        </ImageView>

        <ImageView
            android:id="@+id/setting_tab"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="50dp"
            android:layout_toEndOf="@id/component_tab"
            android:src="@drawable/settings">

        </ImageView>

        <View
            android:id="@+id/active_bar_on_component"
            android:layout_width="20dp"
            android:layout_height="3dp"

            android:layout_centerHorizontal="true"

            android:background="@color/custom_pink">

        </View>

        <View
            android:id="@+id/active_bar_on_setting"
            android:layout_width="20dp"
            android:layout_height="3dp"
            android:layout_marginStart="50dp"

            android:layout_toEndOf="@+id/active_bar_on_component"
            android:background="#00ffffff">

        </View>

        <View
            android:id="@+id/active_bar_on_home"
            android:layout_width="20dp"
            android:layout_height="3dp"
            android:layout_marginEnd="50dp"

            android:layout_toStartOf="@+id/active_bar_on_component"
            android:background="#00ffffff">

        </View>
    </RelativeLayout>

</RelativeLayout>