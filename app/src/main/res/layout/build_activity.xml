    </ScrollView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#D9ffffff">

        <ImageView
            android:id="@+id/home_tab"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="50dp"
            android:layout_toStartOf="@+id/component_tab"
            android:src="@drawable/home">

        </ImageView>

        <TextView
            android:id="@+id/component_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="Components"
            android:textColor="@color/white"
            android:textSize="10sp">

        </TextView>

        <TextView

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_below="@+id/home_tab"


            android:layout_marginTop="2dp"
            android:layout_marginEnd="26dp"
            android:layout_toStartOf="@id/component_title"

            android:text="Home"
            android:textColor="@color/white"
            android:textSize="10sp">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="26dp"
            android:layout_toEndOf="@id/component_title"
            android:text="Setting"
            android:textColor="@color/white"
            android:textSize="10sp">

        </TextView>

        <ImageView
            android:id="@+id/component_tab"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:src="@drawable/component">

        </ImageView>

        <ImageView
            android:id="@+id/setting_tab"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="50dp"
            android:layout_toEndOf="@id/component_tab"
            android:src="@drawable/settings">

        </ImageView>

        <View
            android:id="@+id/active_bar_on_component"
            android:layout_width="20dp"
            android:layout_height="3dp"

            android:layout_centerHorizontal="true"

            android:background="#00ffffff">

        </View>

        <View
            android:id="@+id/active_bar_on_setting"
            android:layout_width="20dp"
            android:layout_height="3dp"
            android:layout_marginStart="50dp"

            android:layout_toEndOf="@+id/active_bar_on_component"
            android:background="#00ffffff">

        </View>

        <View
            android:id="@+id/active_bar_on_home"
            android:layout_width="20dp"
            android:layout_height="3dp"
            android:layout_marginEnd="50dp"

            android:layout_toStartOf="@+id/active_bar_on_component"
