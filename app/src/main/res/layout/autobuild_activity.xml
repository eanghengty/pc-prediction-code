<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_1">

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/custom_pink">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:src="@drawable/thunder">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="AUTO BUILD"
            android:textColor="@color/white"
            android:textSize="24sp">

        </TextView>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/plus">

        </ImageView>


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_bar"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="20dp"
            >
           <LinearLayout
               android:layout_width="390dp"
               android:layout_height="700dp"
               android:orientation="vertical"
               android:background="#80ffffff">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="30dp"
                   android:orientation="vertical">

               </LinearLayout>

<!--               what you wan to build for?-->
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="50dp"
                       android:text="What you want to build for?"
                       android:gravity="center"
                       android:textColor="@color/white"
                       android:textSize="20dp"></TextView>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   >
                   <LinearLayout
                       android:layout_width="300dp"
                       android:layout_height="wrap_content"
                       android:background="@drawable/btn_white"
                       android:orientation="horizontal">
                       <TextView
                           android:layout_width="150dp"
                           android:layout_height="60dp"
                           android:text="WorkStation"
                           android:background="@drawable/btn_purple"
                           android:textColor="@color/white"
                           android:gravity="center">

                       </TextView>
                       <TextView
                           android:layout_width="150dp"
                           android:layout_height="60dp"
                           android:text="Gaming"
                           android:gravity="center"
                           android:background="@drawable/btn_white"
                           android:textColor="@color/custom_pink"
                           >

                       </TextView>
                   </LinearLayout>
               </LinearLayout>

               <!--            CPU-->

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="50dp"
                       android:text="CPU Choice"
                       android:gravity="center"
                       android:textColor="@color/white"
                       android:textSize="20dp"></TextView>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   >
                   <LinearLayout
                       android:layout_width="300dp"
                       android:layout_height="wrap_content"
                       android:background="@drawable/btn_white"
                       android:orientation="horizontal">
                       <TextView
                           android:layout_width="150dp"
                           android:layout_height="60dp"
                           android:text="AMD"
                           android:background="@drawable/btn_purple"
                           android:textColor="@color/white"
                           android:gravity="center">

                       </TextView>
                       <TextView
                           android:layout_width="150dp"
                           android:layout_height="60dp"
                           android:text="INTEL"
                           android:gravity="center"
                           android:background="@drawable/btn_white"
                           android:textColor="@color/custom_pink"
                           >

                       </TextView>
                   </LinearLayout>
               </LinearLayout>

<!--               GPU-->

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="50dp"
                       android:text="GPU Choice"
                       android:gravity="center"
                       android:textColor="@color/white"
                       android:textSize="20dp"></TextView>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   >
                   <LinearLayout
                       android:layout_width="300dp"
                       android:layout_height="wrap_content"
                       android:background="@drawable/btn_white"
                       android:orientation="horizontal">
                       <TextView
                           android:layout_width="150dp"
                           android:layout_height="60dp"
                           android:text="NVIDIA"
                           android:background="@drawable/btn_white"
                           android:textColor="@color/custom_pink"
                           android:gravity="center">

                       </TextView>
                       <TextView
                           android:layout_width="150dp"
                           android:layout_height="60dp"
                           android:text="AMD"
                           android:gravity="center"
                           android:background="@drawable/btn_purple"
                           android:textColor="@color/white"
                           >

                       </TextView>
                   </LinearLayout>
               </LinearLayout>

<!--                price-->
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="50dp"
                       android:text="Price Choice"
                       android:gravity="center"
                       android:textColor="@color/white"
                       android:textSize="20dp"></TextView>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   >
                   <LinearLayout
                       android:layout_width="300dp"
                       android:layout_height="wrap_content"
                       android:background="@drawable/btn_white"
                       android:orientation="horizontal">
                       <TextView
                           android:layout_width="150dp"
                           android:layout_height="60dp"
                           android:text="$0.0 to $500.0"
                           android:background="@drawable/btn_white"
                           android:textColor="@color/custom_pink"
                           android:gravity="center">

                       </TextView>
                       <TextView
                           android:layout_width="150dp"
                           android:layout_height="60dp"
                           android:text="$500.0 to $2000.0"
                           android:gravity="center"
                           android:background="@drawable/btn_purple"
                           android:textColor="@color/white"
                           >

                       </TextView>
                   </LinearLayout>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="20dp"
                   android:gravity="center">

                   <TextView
                       android:layout_width="200dp"
                       android:layout_height="60dp"
                       android:text="Create build"
                       android:gravity="center"
                       android:textSize="16sp"
                       android:background="@drawable/btn_purple"
                       android:textColor="@color/white">

                   </TextView>
               </LinearLayout>



           </LinearLayout>




        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#33ffffff">

        <ImageView
            android:id="@+id/home_tab"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="50dp"
            android:layout_toStartOf="@+id/component_tab"
            android:src="@drawable/home">

        </ImageView>

        <TextView
            android:id="@+id/component_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="Components"
            android:textColor="@color/white"
            android:textSize="10sp">

        </TextView>

        <TextView

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_below="@+id/home_tab"


            android:layout_marginTop="2dp"
            android:layout_marginEnd="26dp"
            android:layout_toStartOf="@id/component_title"

            android:text="Home"
            android:textColor="@color/white"
            android:textSize="10sp">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="26dp"
            android:layout_toEndOf="@id/component_title"
            android:text="Setting"
            android:textColor="@color/white"
            android:textSize="10sp">

        </TextView>

        <ImageView
            android:id="@+id/component_tab"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:src="@drawable/component">

        </ImageView>

        <ImageView
            android:id="@+id/setting_tab"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="50dp"
            android:layout_toEndOf="@id/component_tab"
            android:src="@drawable/settings">

        </ImageView>

        <View
            android:id="@+id/active_bar_on_component"
            android:layout_width="20dp"
            android:layout_height="3dp"

            android:layout_centerHorizontal="true"

            android:background="#00ffffff">

        </View>

        <View
            android:id="@+id/active_bar_on_setting"
            android:layout_width="20dp"
            android:layout_height="3dp"
            android:layout_marginStart="50dp"

            android:layout_toEndOf="@+id/active_bar_on_component"
            android:background="#00ffffff">

        </View>

        <View
            android:id="@+id/active_bar_on_home"
            android:layout_width="20dp"
            android:layout_height="3dp"
            android:layout_marginEnd="50dp"

            android:layout_toStartOf="@+id/active_bar_on_component"
            android:background="@color/custom_pink">

        </View>
    </RelativeLayout>

</RelativeLayout>