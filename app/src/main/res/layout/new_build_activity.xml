<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_1">
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/custom_pink">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:src="@drawable/thunder">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="NEW BUILD"
            android:textColor="@color/white"
            android:textSize="16sp">

        </TextView>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/plus">

        </ImageView>


    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_bar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/top_bar"
            android:gravity="center"
            android:layout_marginTop="20dp">
            <LinearLayout

                android:layout_width="390dp"
                android:layout_height="wrap_content"

                android:background="#80ffffff"
                android:gravity="center">
                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="370dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="NAME"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:layout_marginBottom="10dp"></TextView>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_marginBottom="15dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            ></com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="CPU"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:layout_marginBottom="10dp">

                    </TextView>

                    <GridLayout
                        android:layout_marginBottom="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:rowCount="1"
                        android:columnCount="2"
                        android:background="@drawable/white_background">

                        <LinearLayout
                            android:layout_row="0"
                            android:layout_column="0"
                            android:layout_width="200dp"
                            android:layout_height="150dp"
                            android:gravity="center"
                            >
                            <ImageView
                                android:src="@drawable/component_cpu"
                                android:layout_height="80dp"
                                android:layout_width="150dp"
                                android:layout_gravity="center_vertical"

                                >

                            </ImageView>
                        </LinearLayout>
                        <LinearLayout

                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            android:layout_row="0"
                            android:layout_column="1"
                            android:orientation="vertical"
                            android:gravity="center_vertical"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="INTEL CORE 2 DUO"
                                android:gravity="center_vertical"
                                android:textSize="16sp"
                                android:textColor="@color/custom_pink">

                            </TextView>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="Price $250"
                                android:gravity="center_vertical"
                                android:textSize="16sp"
                                android:textColor="@color/custom_pink">

                            </TextView>
                        </LinearLayout>

                    </GridLayout>

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:columnCount="2"
                        android:rowCount="1"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:layout_height="60dp"
                            android:layout_width="250dp"
                            android:background="@color/custom_pink"
                            android:text="Browse CPU"
                            android:textColor="@color/white"
                            android:layout_column="0"
                            android:layout_row="0"
                            android:gravity="center"
                            android:layout_gravity="center_vertical"
                            >

                        </TextView>
                        <LinearLayout

                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            android:layout_row="0"
                            android:layout_column="1"
                            android:background="@color/custom_yellow"
                            android:gravity="center"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/delete">

                            </ImageView>
                        </LinearLayout>
                    </GridLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="GPU"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:layout_marginBottom="10dp">

                    </TextView>

                    <GridLayout
                        android:layout_marginBottom="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:rowCount="1"
                        android:columnCount="2"
                        android:background="@drawable/white_background">

                        <LinearLayout
                            android:layout_row="0"
                            android:layout_column="0"
                            android:layout_width="200dp"
                            android:layout_height="150dp"
                            android:gravity="center"
                            >
                            <ImageView
                                android:src="@drawable/not_found"
                                android:layout_height="80dp"
                                android:layout_width="150dp"
                                android:layout_gravity="center_vertical"

                                >

                            </ImageView>
                        </LinearLayout>

                        <LinearLayout

                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            android:layout_row="0"
                            android:layout_column="1"
                            android:orientation="vertical"
                            android:gravity="center_vertical"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="no data"
                                android:gravity="center_vertical"
                                android:textSize="16sp"
                                android:textColor="@color/custom_pink">

                            </TextView>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="no data"
                                android:gravity="center_vertical"
                                android:textSize="16sp"
                                android:textColor="@color/custom_pink">

                            </TextView>
                        </LinearLayout>

                    </GridLayout>

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:columnCount="2"
                        android:rowCount="1"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:layout_height="60dp"
                            android:layout_width="250dp"
                            android:background="@color/custom_pink"
                            android:text="Browse GPU"
                            android:textColor="@color/white"
                            android:layout_column="0"
                            android:layout_row="0"
                            android:gravity="center"
                            android:layout_gravity="center_vertical"
                            >

                        </TextView>
                        <LinearLayout

                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            android:layout_row="0"
                            android:layout_column="1"
                            android:background="@color/custom_yellow"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="invisible">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/delete">

                            </ImageView>
                        </LinearLayout>
                    </GridLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="center">
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="60dp"
                            android:background="@drawable/btn_purple"
                            android:text="CREATE BUILD"
                            android:gravity="center"
                            android:textColor="@color/white">

                        </TextView>
                    </LinearLayout>
                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp">

                    </GridLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#33ffffff">

        <!--home_tab-->
        <ImageView
            android:id="@+id/home_tab"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="50dp"
            android:layout_toStartOf="@+id/component_tab"
            android:src="@drawable/home">

        </ImageView>
        <!--tab_title-->
        <TextView
            android:id="@+id/component_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="Components"
            android:textColor="@color/white"
            android:textSize="10sp">

        </TextView>
        <!--tab_title-->
        <TextView

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_below="@+id/home_tab"


            android:layout_marginTop="2dp"
            android:layout_marginEnd="26dp"
            android:layout_toStartOf="@id/component_title"

            android:text="Home"
            android:textColor="@color/white"
            android:textSize="10sp">

        </TextView>
        <!--tab_title-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="26dp"
            android:layout_toEndOf="@id/component_title"
            android:text="Setting"
            android:textColor="@color/white"
            android:textSize="10sp">

        </TextView>
        <!--component_tab-->
        <ImageView
            android:id="@+id/component_tab"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:src="@drawable/component">

        </ImageView>
        <!--       setting_tab-->
        <ImageView
            android:id="@+id/setting_tab"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="50dp"
            android:layout_toEndOf="@id/component_tab"
            android:src="@drawable/settings">

        </ImageView>
        <!--        purple-active-bar-->
        <View
            android:id="@+id/active_bar_on_component"
            android:layout_width="20dp"
            android:layout_height="3dp"

            android:layout_centerHorizontal="true"

            android:background="#00ffffff">

        </View>
        <!--        purple-active-bar-->
        <View
            android:id="@+id/active_bar_on_setting"
            android:layout_width="20dp"
            android:layout_height="3dp"
            android:layout_marginStart="50dp"

            android:layout_toEndOf="@+id/active_bar_on_component"
            android:background="#00ffffff">

        </View>
        <!--        purple-active-bar-->
        <View
            android:id="@+id/active_bar_on_home"
            android:layout_width="20dp"
            android:layout_height="3dp"
            android:layout_marginEnd="50dp"

            android:layout_toStartOf="@+id/active_bar_on_component"
            android:background="@color/custom_pink">

        </View>
    </RelativeLayout>

</RelativeLayout>